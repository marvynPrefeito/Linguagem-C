
25.

#include <stdio.h>

int main(){
    float celsius, fahrenheit;
    
    printf("Insira a temperatura em celsius: ");
    scanf("%f", &celsius);
    
    fahrenheit = (celsius * 9/5) + 32;
    
    printf("%.2f graus celsius = %.2f graus fahrenheit", celsius, fahrenheit);
    
    return 0;
}

